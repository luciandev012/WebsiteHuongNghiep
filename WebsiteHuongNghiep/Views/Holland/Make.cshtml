@model IEnumerable<WebsiteHuongNghiep.Application.ViewModels.MultipleChoicesVM>

@section Scripts{ 

    <script>
        function validateForm() {
            let x = document.getElementsByName("Data");
            for (let i = 0; i < x.length; i++) {
                if (isNaN(parseInt(x[i].value))){
                    alert("Bạn phải nhập số điểm từ 0-4");
                    return false;
                }
                let int = parseInt(x[i].value);
                if (int < 0 || int > 4) {
                    alert("Bạn phải nhập số điểm từ 0-4");
                    return false;
                }
                
            }
            return true;
        }
    </script>
}

