@model List<WebsiteHuongNghiep.Data.Entities.MbtiTable>
@{
    ViewData["Title"] = "Make";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script>
        var main = document.getElementById("main-content");
        main.style.backgroundImage = "none";
        main.style.backgroundColor = "aliceblue";
        main.style.minHeight = "unset";
    </script>

}

<div class="container">
    <div class="row mbti-question">
        <h2 style="padding-left: 100px; margin-bottom: 40px;">Let's go</h2>
        <div class="col-md-8">
            <form method="post" asp-action="Make">
                @foreach (var item in Model)
                {
                    <p style="font-weight: bold;"><span>@item.Position</span>. @item.Question</p>
                    <div class="row" style="padding-bottom:10px; padding-left:10px">
                        <div class="col-md-8">
                            a. @item.AnswerA
                        </div>
                        <div class="col-md-4">
                            <input type="text" name="Score" />
                        </div>
                    </div>
                    <div class="row" style="padding-bottom:10px; padding-left:10px">
                        <div class="col-md-8">
                            b. @item.AnswerB
                        </div>
                        <div class="col-md-4">
                            <input type="text" name="Score" />
                        </div>
                    </div>     
                        
                    
                }
                <button type="submit" class="btn btn-bg-primary">Xem kết quả</button>
            </form>
        </div>
    </div>
</div>

