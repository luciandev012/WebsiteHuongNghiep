@model IEnumerable<WebsiteHuongNghiep.Data.Entities.HollandTable>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 class="mg-20">Quản lý bảng</h3>

<p>
    <a asp-action="Create" class="btn btn-success mg-20">Thêm mới</a>
</p>
<table class="table mg-20">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HLTableId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HLTableId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", "Holland", new { id=item.HLTableId }, new { @class = "btn btn-primary" }) 
                @Html.ActionLink("Xóa", "Delete", "Holland", new { id=item.HLTableId  }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
